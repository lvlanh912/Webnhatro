@{
    Layout = null;
    ViewData["Title"]="Đăng nhập";
}


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng Nhập</title>
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@300;400;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/Template/dist/assets/css/bootstrap.css">
    <link rel="stylesheet" href="~/Template/dist/assets/vendors/bootstrap-icons/bootstrap-icons.css">
    <link rel="stylesheet" href="~/Template/dist/assets/css/app.css">
    <link rel="stylesheet" href="~/Template/dist/assets/css/pages/auth.css">
</head>

<body class="bg-light">
@using (Html.BeginForm("Dangnhap","Home",FormMethod.Post))
{
    <div class="row justify-content-center">
        <div class="col-md-6 mx-4 my-4 position-relative">
            <div class="mb-3">
                <a asp-action="Index" asp-controller="Home"><img src="~/logo.png" style="width:200px" alt="Logo"></a>
            </div>
         <div class="col-12">
                <div class="card py-2">
                    <div class="card-header text-center">
                        <h4 class="card-title">Đăng Nhập</h4>
                    </div>
                    @if (TempData["thongbao"] != null)
                    {
                        <div class="alert alert-light-danger color-danger"><i class="bi bi-exclamation-circle"></i>@TempData["thongbao"]</div>
                    }
                    <div class="card-body">
                        <form method="post">
                        <div class="row">
                            <div class="col-12">
                                <label>Tên người dùng</label>
                                <div class="form-group position-relative has-icon-left">
                                    <input type="text" name="Username" class="form-control" placeholder="Nhập username">
                                    <div class="form-control-icon">
                                        <i class="bi bi-person"></i>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12">
                                <label>Mật khẩu</label>
                                <div class="form-group position-relative has-icon-left">
                                    <input type="password" name="Password" class="form-control" placeholder="********">
                                    <div class="form-control-icon">
                                        <i class="bi bi-shield-lock"></i>
                                    </div>
                                </div>
                            </div>
                        <div class="d-flex justify-content-center">
                            <button class="btn btn-primary px-4" type="submit">Đăng Nhập</button>
                        </div>
                        <div class="mt-4 d-flex justify-content-center">
                            Chưa có tài khoản? 
                            <a asp-action="Dangky" asp-controller="Home"> Đăng ký</a>
                         </div>
                        <div class="mt-4 d-flex justify-content-center">
                           Quên mật khẩu? Vui lòng liên hệ với quản trị viên
                        </div>
                       
                      </div>
                    </form>
                </div>
            </div>
         </div>
        </div>
    </div>
 }
</body>

</html>
